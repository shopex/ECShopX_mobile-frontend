<block>
    <at-float-layout isOpened="{{isOpened}}" __triggerObserer="{{ _triggerObserer }}">
        <view class="payment-picker">
            <view class="payment-picker__hd"><text>支付方式</text>
                <view class="at-icon at-icon-close" bindtap="handleCancel"></view>
            </view>
            <view class="payment-picker__bd">
                <view class="{{'payment-item ' + (!!disabledPayment ? 'is-disabled' : '')}}" bindtap="handlePaymentChange" data-e-tap-so="this" data-e-tap-a-a="dhpoint">
                    <view class="payment-item__bd"><text class="payment-item__title">积分支付</text><text class="payment-item__desc">{{disabledPayment ? disabledPayment.message : '使用积分支付'}}</text>
                    </view>
                    <view class="payment-item__ft">
                        <sp-checkbox disabled="{{anonymousState__temp}}" __triggerObserer="{{ _triggerObserer }}" checked="{{anonymousState__temp2}}"></sp-checkbox>
                    </view>
                </view>
                <view class="payment-item no-border" bindtap="handlePaymentChange" data-e-tap-so="this" data-e-tap-a-a="amorepay">
                    <view class="payment-item__bd"><text class="payment-item__title">微信支付</text><text class="payment-item__desc">微信支付可使用优惠券及享受运费优惠</text>
                    </view>
                    <view class="payment-item__ft">
                        <sp-checkbox checked="{{anonymousState__temp3}}" __triggerObserer="{{ _triggerObserer }}"></sp-checkbox>
                    </view>
                </view>
                <at-button type="primary" __triggerObserer="{{ _triggerObserer }}" loading="{{loading}}" bindonclick="funPrivatecuIfd" __fn_onClick="{{true}}" data-e-onclick-so="this" data-e-onclick-a-a="{{localType}}">确定</at-button>
            </view>
        </view>
    </at-float-layout>
</block>