<block>
    <at-float-layout isOpened="{{isOpened}}" __triggerObserer="{{ _triggerObserer }}">
        <view class="drug-info">
            <at-input title="用药人姓名" __triggerObserer="{{ _triggerObserer }}" className="trade-remark__input" value="{{info.name}}" bindonchange="handleChange" __fn_onChange="{{true}}" data-e-onchange-so="this" data-e-onchange-a-a="name"></at-input>
            <at-input title="用药人身份证" __triggerObserer="{{ _triggerObserer }}" className="trade-remark__input" placeholder="请输入有效的身份证号" value="{{info.id_card}}" bindonchange="handleChange" __fn_onChange="{{true}}" data-e-onchange-so="this" data-e-onchange-a-a="id_card"></at-input>
            <view class="drug-describe">
                <view class="drug-describe__img"><text class="drug-describe__text">上传处方单</text>
                    <view class="drug-describe__imgupload">
                        <at-image-picker mode="aspectFill" __triggerObserer="{{ _triggerObserer }}" multiple="{{true}}" length="{{3}}" files="{{info.imgs}}" bindonchange="handleImageChange" __fn_onChange="{{true}}" data-e-onchange-so="this"></at-image-picker>
                    </view>
                </view>
            </view>
            <at-button type="primary" __triggerObserer="{{ _triggerObserer }}" bindonclick="funPrivatehlUhK" __fn_onClick="{{true}}" data-e-onclick-so="this" data-e-onclick-a-a="{{info}}">确定</at-button>
        </view>
    </at-float-layout>
</block>