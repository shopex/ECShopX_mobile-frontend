<block>
    <block wx:if="{{!info}}">
        <view></view>
    </block>
    <view wx:else>
        <at-accordion open="{{anonymousState__temp}}" __triggerObserer="{{ _triggerObserer }}" bindonclick="handlePackageClick" isAnimation="{{false}}" title="{{package_name}}" __fn_onClick="{{true}}" data-e-onclick-so="this" data-e-onclick-a-a="{{package_id}}">
            <view class="package-goods__list">
                <goods-item classes="package-goods__item" __triggerObserer="{{ _triggerObserer }}" showFav="{{false}}" showSku="{{true}}" wx:key="$original.item_id" info="{{item.$original}}" wx:for="{{loopArray0}}" wx:for-item="item" wx:for-index="_anonIdx">
                    <view class="cart-item__act" slot="checkbox">
                        <sp-checkbox wx:key="$original.item_id" __triggerObserer="{{ _triggerObserer }}" checked="{{item.$loopState__temp3}}" bindonchange="handleSelectionChange" __fn_onChange="{{true}}" data-e-onchange-so="this" data-e-onchange-a-a="{{item.$original}}"></sp-checkbox>
                    </view>
                    <view class="goods-item__sku" style="{{item.$loopState__temp5}}" bindtap="handleSkuSelection" slot="spec" data-e-tap-so="this" data-e-tap-a-a="{{item.$original}}"><text class="goods-item__sku-text">{{item.$original.checked_spec ? item.$original.checked_spec.propsText : '请选择规格'}}</text><text class="icon-arrowDown"></text>
                    </view>
                </goods-item>
            </view>
            <view class="package-goods__item-footer">
                <view class="package-amount">组合价：<text class="amount-number">¥{{packageTotalPrice}}</text>
                </view>
                <at-button type="primary" __triggerObserer="{{ _triggerObserer }}" className="package-add-cart" size="small" bindonclick="handleAddCart" __fn_onClick="{{true}}" data-e-onclick-so="this">加入购物车</at-button>
            </view>
            <block wx:if="{{curSku && showBuyPanel}}">
                <goods-buy-panel info="{{curSku}}" __triggerObserer="{{ _triggerObserer }}" type="{{buyPanelType}}" isOpened="{{showBuyPanel}}" bindonclose="anonymousFunc0" bindonsubmit="handleSpecSubmit" __fn_onClose="{{true}}" __fn_onSubmit="{{true}}" data-e-onsubmit-so="this"></goods-buy-panel>
            </block>
        </at-accordion>
        <block wx:if="{{current !== package_id}}">
            <scroll-view class="package-goods__thumbnails" scroll-x="{{true}}" scroll-with-animation="{{true}}">
                <image wx:key="index" class="package-goods__thumbnails-img" mode="aspectFix" src="{{item.pics[0]}}" wx:for="{{list}}" wx:for-item="item" wx:for-index="_anonIdx2"></image>
            </scroll-view>
        </block>
    </view>
</block>