<block>
    <view class="goods-buy-toolbar">
        <view class="goods-buy-toolbar__menus">
            <view class="goods-buy-toolbar__menu-item" bindtap="navigateTo" data-e-tap-so="this" data-e-tap-a-a="/pages/home/index">
                <view class="sp-icon sp-icon-shop"></view><text class="goods-buy-toolbar__menu-item-text">店铺</text>
            </view>
            <view class="goods-buy-toolbar__menu-item" bindtap="navigateTo" data-e-tap-so="this" data-e-tap-a-a="/pages/cart/espier-index">
                <at-badge value="{{cartTotalCount || null}}" __triggerObserer="{{ _triggerObserer }}">
                    <view class="sp-icon sp-icon-cart"></view>
                </at-badge><text class="goods-buy-toolbar__menu-item-text">购物车</text>
            </view>
            <button class="goods-buy-toolbar__menu-item" open-type="contact">
                <view class="sp-icon sp-icon-contact"></view><text class="goods-buy-toolbar__menu-item-text">客服</text>
            </button>
        </view>
        <view class="goods-buy-toolbar__btns" style="width: 59%;">
            <block wx:if="{{type === 'normal'}}">
                <button class="goods-buy-toolbar__btn btn-add-cart" bindtap="funPrivateVSoaH">加入购物车</button>
            </block>
            <button class="goods-buy-toolbar__btn btn-fast-buy" bindtap="funPrivateaoVCJ">{{fastBuyText}}</button>
        </view>
    </view>
</block>