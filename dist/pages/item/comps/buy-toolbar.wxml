<block>
    <view class="goods-buy-toolbar">
        <view class="goods-buy-toolbar__menus">
            <view class="goods-buy-toolbar__menu-item" bindtap="funPrivateHMmpM">
                <view class="{{'in-icon ' + (info.is_fav ? 'in-icon-fav-f' : 'in-icon-fav')}}"></view>
            </view>
            <view class="goods-buy-toolbar__menu-item" bindtap="handleClickCart" data-e-tap-so="this" data-e-tap-a-a="{{info.item_id}}" data-e-tap-a-b="{{isDrug ? 'drug' : 'distributor'}}">
                <at-badge value="{{cartCount || null}}" __triggerObserer="{{ _triggerObserer }}">
                    <view class="in-icon in-icon-cart"></view>
                </at-badge>
            </view>
        </view>
        <block>
            <block wx:if="{{customRender}}">
                <slot></slot>
            </block>
            <block wx:else>
                <view class="goods-buy-toolbar__btns">
                    <block wx:if="{{type === 'normal'}}">
                        <form-id-collector sync="{{true}}" __triggerObserer="{{ _triggerObserer }}" bindonclick="funPrivatevTkKf" __fn_onClick="{{true}}">
                            <view class="goods-buy-toolbar__btn btn-add-cart">{{isDrug ? '加入药品清单' : '添加至购物车'}}</view>
                        </form-id-collector>
                    </block>
                    <block wx:if="{{!isDrug}}">
                        <form-id-collector sync="{{true}}" __triggerObserer="{{ _triggerObserer }}" bindonclick="funPrivateOZJqm" __fn_onClick="{{true}}">
                            <view class="goods-buy-toolbar__btn btn-fast-buy">{{fastBuyText}}</view>
                        </form-id-collector>
                    </block>
                </view>
            </block>
        </block>
    </view>
</block>