<block>
    <view class="goods-buy-toolbar">
        <view class="goods-buy-toolbar__menus">
            <view class="goods-buy-toolbar__menu-item" bindtap="funPrivateuXusN">
                <view class="{{'in-icon ' + (info.is_fav ? 'in-icon-fav-f' : 'in-icon-fav')}}"></view>
            </view>
            <button class="goods-buy-toolbar__menu-item" open-type="contact">
                <view class="in-icon in-icon-kefu"></view>
            </button>
            <view class="goods-buy-toolbar__menu-item" bindtap="navigateTo" data-e-tap-so="this" data-e-tap-a-a="/pages/cart/espier-index">
                <at-badge value="{{cartCount || null}}" __triggerObserer="{{ _triggerObserer }}">
                    <view class="in-icon in-icon-cart"></view>
                </at-badge>
            </view>
        </view>
        <block>
            <block wx:if="{{customRender}}">
                <slot></slot>
            </block>
            <block wx:else>
                <view class="goods-buy-toolbar__btns">
                    <block wx:if="{{type === 'normal'}}">
                        <form-id-collector classes="goods-buy-toolbar__btn btn-add-cart" __triggerObserer="{{ _triggerObserer }}">
                            <button class="goods-buy-toolbar__btn btn-add-cart" bindtap="funPrivateowvJL">添加至购物车</button>
                        </form-id-collector>
                    </block>
                    <button class="goods-buy-toolbar__btn btn-fast-buy" bindtap="funPrivatejitxq">{{fastBuyText}}</button>
                </view>
            </block>
        </block>
    </view>
</block>