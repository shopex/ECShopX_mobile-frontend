<block>
    <view class="page-seckill-list">
        <at-tabs className="seckill__tabs" __triggerObserer="{{ _triggerObserer }}" current="{{curTabIdx}}" tabList="{{tabList}}" bindonclick="handleClickTab" __fn_onClick="{{true}}">
            <at-tabs-pane current="{{curTabIdx}}" __triggerObserer="{{ _triggerObserer }}" wx:key="pIdx" index="{{pIdx}}" wx:for="{{tabList}}" wx:for-item="panes" wx:for-index="pIdx"></at-tabs-pane>
        </at-tabs>
        <scroll-view class="seckill__scroll" scroll-y="{{true}}" scroll-top="{{scrollTop}}" scroll-with-animation="{{true}}" bindscroll="handleScroll">
            <view>
                <view class="seckill-list" wx:key="index" bindtap="handleClickItem" wx:for="{{list}}" wx:for-item="item" wx:for-index="index" data-e-tap-so="this" data-e-tap-a-a="{{item}}">
                    <view class="seckill-list__title">离结束还有：
                        <at-countdown isShowDay="{{true}}" __triggerObserer="{{ _triggerObserer }}" day="{{timeCountDown[index].dd}}" hours="{{timeCountDown[index].hh}}" minutes="{{timeCountDown[index].mm}}" seconds="{{timeCountDown[index].ss}}"></at-countdown>
                    </view>
                    <image class="seckill-list__banner" mode="widthFix" src="{{item.ad_pic}}"></image>
                    <view class="seckill-goods">
                        <view class="seckill-goods__item">
                            <image class="seckill-goods__img" mode="widthFix" src="{{item.ad_pic}}"></image><text class="seckill-goods__title">标题标题标题标题标题标题标题标题</text>
                        </view>
                    </view>
                </view>
            </view>
        </scroll-view>
        <back-to-top show="{{showBackToTop}}" __triggerObserer="{{ _triggerObserer }}" bindonclick="scrollBackToTop" __fn_onClick="{{true}}"></back-to-top>
    </view>
</block>