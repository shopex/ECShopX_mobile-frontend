<block>
    <view class="page-group-list">
        <at-tabs className="group-list__tabs" __triggerObserer="{{ _triggerObserer }}" current="{{curTabIdx}}" tabList="{{tabList}}" bindonclick="handleClickTab" __fn_onClick="{{true}}">
            <at-tabs-pane current="{{curTabIdx}}" __triggerObserer="{{ _triggerObserer }}" wx:key="pIdx" index="{{pIdx}}" wx:for="{{tabList}}" wx:for-item="panes" wx:for-index="pIdx"></at-tabs-pane>
        </at-tabs>
        <scroll-view scroll-y="{{true}}" class="groups-list__scroll" bindscrolltolower="nextPage">
            <view class="group-item" wx:key="$original.groups_activity_id" bindtap="handleClickItem" wx:for="{{loopArray0}}" wx:for-item="item" wx:for-index="idx" data-e-tap-so="this" data-e-tap-a-a="{{item.$original}}">
                <view class="group-item__hd">
                    <image class="group-item__img" mode="aspectFill" src="{{item.$original.pics}}"></image>
                </view>
                <view class="group-item__bd">
                    <view class="group-item__cont"><text class="group-item__title"><block wx:if="{{item.$original.team_status == 2}}"><text class="group-item__title-status">【已满团】</text>
</block>
<block wx:if="{{item.$original.team_status == 3}}"><text class="group-item__title-status">【未成团】</text>
</block>{{item.$original.goods_name}}</text>
<view class="group-item__desc">
    <view class="group-item__tuan"><text class="group-item__tuan-num">{{item.$original.person_num}}</text><text class="group-item__tuan-txt">人团</text>
    </view>
    <price primary="{{true}}" __triggerObserer="{{ _triggerObserer }}" className="group-item__price" value="{{item.$original.act_price}}" unit="cent"></price>
</view>
</view>
<view class="group-item__action">
    <block wx:if="{{item.remaining_time_obj}}">
        <view class="timer">
            <view class="at-icon at-icon-clock"></view>
            <at-countdown isShowDay="{{true}}" __triggerObserer="{{ _triggerObserer }}" format="{{item.$loopState__temp2}}" day="{{item.remaining_time_obj.dd}}" hours="{{item.remaining_time_obj.hh}}" minutes="{{item.remaining_time_obj.mm}}" seconds="{{item.remaining_time_obj.ss}}"></at-countdown>
        </view>
    </block>
    <block>
        <block wx:if="{{curTabIdx === 0}}">
            <view class="btn-go">去开团</view>
        </block>
        <block wx:else>
            <view class="btn-go disabled">未开始</view>
        </block>
    </block>
</view>
</view>
</view>
<block wx:if="{{page.isLoading}}">
    <loading __triggerObserer="{{ _triggerObserer }}">正在加载...</loading>
</block>
<block wx:if="{{!page.isLoading && !page.hasNext && !list.length}}">
    <sp-note img="trades_empty.png" __triggerObserer="{{ _triggerObserer }}">暂无数据~</sp-note>
</block>
</scroll-view>
</view>
</block>