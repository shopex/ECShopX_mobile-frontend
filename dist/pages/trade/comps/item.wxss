.trade-item__dropdown {
  visibility: hidden;
  opacity: 0;
  background: #4c4c4c;
  border-radius: 6rpx;
  width: 140rpx;
  padding: 8rpx 0;
  margin-left: 25rpx;
  text-align: center;
  position: absolute;
  z-index: 300;
  line-height: 40rpx;
}
.trade-item__dropdown.is-active {
  -webkit-transition: all 0.2s ease-in;
  -o-transition: all 0.2s ease-in;
  transition: all 0.2s ease-in;
