<block>
    <block wx:if="{{!info}}">
        <view></view>
    </block>
    <view class="order-item" bindtap="funPrivateryVav" wx:else>
        <view class="order-item__hd">
            <image mode="aspectFill" class="order-item__img" src="{{img}}"></image>
        </view>
        <view class="order-item__bd"><text class="order-item__title">{{info.title}}</text>
            <slot name="desc"></slot>
            <block wx:if="{{showExtra}}">
                <view class="order-item__extra"><text class="order-item__desc">{{info.goods_props}}</text>
                    <block wx:if="{{info.num}}"><text class="order-item__num">数量：{{info.num}}</text>
                    </block>
                </view>
            </block>
        </view>
        <block>
            <block wx:if="{{customFooter}}">
                <slot name="footer"></slot>
            </block>
            <block wx:else>
                <view class="order-item__ft">
                    <block>
                        <block wx:if="{{payType === 'point'}}">
                            <price className="order-item__price" __triggerObserer="{{ _triggerObserer }}" appendText="积分" noSymbol="{{true}}" noDecimal="{{true}}" value="{{info.point}}"></price>
                        </block>
                        <block wx:else>
                            <price className="order-item__price" __triggerObserer="{{ _triggerObserer }}" value="{{info.price}}"></price>
                        </block>
                    </block><text class="order-item__pay-type">[在线支付]</text>
                </view>
            </block>
        </block>
    </view>
</block>