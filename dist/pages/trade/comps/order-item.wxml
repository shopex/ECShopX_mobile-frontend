<block>
    <view class="order-item" bindtap="funPrivatefNVFu">
        <view class="order-item__hd">
            <image mode="aspectFill" class="order-item__img" src="{{info.pic_path}}"></image>
        </view>
        <view class="order-item__bd"><text class="order-item__title">{{info.title}}</text><text class="order-item__desc">{{info.goods_props}}</text>
        </view>
        <view class="order-item__ft">
            <price className="order-item__price" __triggerObserer="{{ _triggerObserer }}" value="{{info.price}}"></price><text class="order-item__num">x {{info.num}}</text>
        </view>
    </view>
</block>