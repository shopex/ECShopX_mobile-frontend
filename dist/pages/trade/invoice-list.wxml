<block>
    <view class="page-trade-list page-invoice-list">
        <nav-bar title="发票管理" __triggerObserer="{{ _triggerObserer }}" leftIconType="chevron-left" fixed="true"></nav-bar>
        <scroll-view scroll-y="{{true}}" class="trade-list__scroll" bindscrolltolower="nextPage">
            <trade-item customFooter="{{true}}" __triggerObserer="{{ _triggerObserer }}" payType="{{item.pay_type}}" wx:key="tid" info="{{item}}" bindonclick="handleClickItem" bindonclickbtn="handleClickItemBtn" wx:for="{{list}}" wx:for-item="item" wx:for-index="_anonIdx" __fn_onClick="{{true}}" data-e-onclick-so="this" data-e-onclick-a-a="{{item}}" __fn_onClickBtn="{{true}}">
                <view class="trade-item__ft" slot="footer"><text class="trade-item__status">已开票</text>
                </view>
            </trade-item>
            <block wx:if="{{page.isLoading}}">
                <loading __triggerObserer="{{ _triggerObserer }}">正在加载...</loading>
            </block>
            <block wx:if="{{!page.isLoading && !page.hasNext && !list.length}}">
                <sp-note img="trades_empty.png" __triggerObserer="{{ _triggerObserer }}">赶快去添加吧~</sp-note>
            </block>
        </scroll-view>
    </view>
</block>