<block>
    <view class="page-trade-list">
        <nav-bar title="订单列表" __triggerObserer="{{ _triggerObserer }}" leftIconType="chevron-left" fixed="true"></nav-bar>
        <at-tabs className="trade-list__tabs" __triggerObserer="{{ _triggerObserer }}" current="{{curTabIdx}}" tabList="{{tabList}}" bindonclick="handleClickTab" __fn_onClick="{{true}}">
            <at-tabs-pane current="{{curTabIdx}}" __triggerObserer="{{ _triggerObserer }}" wx:key="pIdx" index="{{pIdx}}" wx:for="{{tabList}}" wx:for-item="panes" wx:for-index="pIdx"></at-tabs-pane>
        </at-tabs>
        <scroll-view scroll-y="{{true}}" class="trade-list__scroll" bindscrolltoupper="onPullDownRefresh" bindscrolltolower="nextPage" data-e-scrolltoupper-so="this">
            <trade-item payType="{{item.$original.pay_type}}" __triggerObserer="{{ _triggerObserer }}" wx:key="$original.tid" info="{{item.$original}}" showActions="{{item.$loopState__temp2}}" bindonclick="handleClickItem" bindonclickbtn="handleClickItemBtn" bindonactionbtnclick="handleActionBtnClick" bindonactionclick="handleActionClick" wx:for="{{loopArray0}}" wx:for-item="item" wx:for-index="_anonIdx" __fn_onClick="{{true}}" data-e-onclick-so="this" data-e-onclick-a-a="{{item.$original}}" __fn_onClickBtn="{{true}}" data-e-onclickbtn-so="this" data-e-onclickbtn-a-a="{{item.$original}}" __fn_onActionBtnClick="{{true}}" data-e-onactionbtnclick-so="this" data-e-onactionbtnclick-a-a="{{item.$original}}" __fn_onActionClick="{{true}}" data-e-onactionclick-so="this" data-e-onactionclick-a-a="{{item.$original}}"></trade-item>
            <block wx:if="{{page.isLoading}}">
                <loading __triggerObserer="{{ _triggerObserer }}">正在加载...</loading>
            </block>
            <block wx:if="{{!page.isLoading && !page.hasNext && !list.length}}">
                <sp-note img="trades_empty.png" __triggerObserer="{{ _triggerObserer }}">赶快去添加吧~</sp-note>
            </block>
            <block wx:if="{{!!curItemActionsId}}">
                <view class="layer" bindtap="hideLayer"></view>
            </block>
        </scroll-view>
    </view>
</block>