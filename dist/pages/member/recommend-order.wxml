<block>
    <view class="recomm-list">
        <nav-bar title="我的推广订单" __triggerObserer="{{ _triggerObserer }}" leftIconType="chevron-left" fixed="true"></nav-bar>
        <scroll-view scroll-y="{{true}}" class="order-recom" bindscrolltolower="nextPage">
            <view wx:key="idx" wx:for="{{list}}" wx:for-item="item" wx:for-index="idx">
                <view class="order-item">
                    <view class="order-item__title">
                        <view class="order-item__title-name"><text class="small-text">订单号：</text>{{item.order_id}}</view><text class="order-item__title__data">{{item.username}}</text>
                    </view>
                    <view class="order-item__title-name"><text class="small-text">{{item.source === 'order' ? '佣金' : '津贴'}}：</text><text class="order-item__title-name rebate-color">￥{{item.rebate}}</text>
                    </view>
                    <view class="small-text">{{item.created}}</view>
                </view>
            </view>
            <block wx:if="{{page.isLoading}}">
                <loading __triggerObserer="{{ _triggerObserer }}">正在加载...</loading>
            </block>
            <block wx:if="{{!page.isLoading && !page.hasNext && !list.length}}">
                <sp-note img="trades_empty.png" __triggerObserer="{{ _triggerObserer }}">赶快去添加吧~</sp-note>
            </block>
        </scroll-view>
    </view>
</block>