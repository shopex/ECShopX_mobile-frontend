<block>
    <view class="page-member-integral">
        <nav-bar title="积分充值" __triggerObserer="{{ _triggerObserer }}" leftIconType="chevron-left" fixed="true"></nav-bar>
        <view class="member-integral__hd">
            <view class="integral-info">
                <view class="integral-number"><text class="sp-icon sp-icon-jifen1 icon-point"></text><text class="integral-number__text">{{totalPoint}}</text>
                </view>
                <view class="integral-text">当前积分余额</view>
            </view>
        </view>
        <view class="member-integral__bd">
            <view class="integral-sec integral-info__status">
                <view class="integral-sec__share">点击“立即兑换”即表示阅读并同意<text>《兑换协议》</text>
                </view>
            </view>
            <view class="integral-sec member-pay">
                <at-input className="otherNumber" __triggerObserer="{{ _triggerObserer }}" title="兑换金额" name="otherNumber" type="number" value="{{otherNumber}}" placeholder="请输入金额" bindonchange="handleChangeOtherNum" __fn_onChange="{{true}}"></at-input>
                <view class="btns">
                    <at-button type="primary" __triggerObserer="{{ _triggerObserer }}" bindonclick="handleClickPay" __fn_onClick="{{true}}" data-e-onclick-so="this" data-e-onclick-a-a="{{otherNumber}}">立即兑换</at-button>
                </view>
            </view>
            <at-modal isOpened="{{isOpened}}" __triggerObserer="{{ _triggerObserer }}" cancelText="取消" confirmText="确认" bindonclose="handleClosePay" bindoncancel="handleClosePay" bindonconfirm="handleConfirmPay" content="{{anonymousState__temp}}" __fn_onClose="{{true}}" __fn_onCancel="{{true}}" __fn_onConfirm="{{true}}"></at-modal>
        </view>
        <sp-toast __triggerObserer="{{ _triggerObserer }}"></sp-toast>
    </view>
</block>