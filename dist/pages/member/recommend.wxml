<block>
    <view class="page-member-index">
        <view class="member-index__hd">
            <view class="member-info_top">
                <block wx:if="{{info.parent_info}}">
                    <at-avatar className="member-avatar" __triggerObserer="{{ _triggerObserer }}" title="头像" size="large" circle="{{true}}"></at-avatar>
                </block>
                <view class="member-info_name">
                    <view>{{info.username}}({{info.promoter_grade_name}})</view>
                    <view>{{info.mobile}}</view>
                    <block wx:if="{{info.parent_info}}">
                        <view class="member-name">推荐人：{{info.parent_info}}</view>
                    </block>
                </view>
            </view>
        </view>
        <view class="member-index__bd">
            <view class="member-sec member-info__status">
                <view class="member-status__item">
                    <view class="member-status__item-val">{{detail.itemTotalPrice}}<text>元</text>
                    </view><text class="member-status__item-title">营业额</text>
                </view>
                <view class="member-status__item">
                    <view class="member-status__item-val">{{detail.cashWithdrawalRebate}}<text>元</text>
                    </view><text class="member-status__item-title">可提现</text>
                </view>
            </view>
            <view class="member-sec member-trades">
                <view class="sec-bd">
                    <view class="member-recommend__menus">
                        <at-badge value="{{detail.promoter_order_count}}" __triggerObserer="{{ _triggerObserer }}">
                            <sp-icon-menu icon="pay" __triggerObserer="{{ _triggerObserer }}" title="提成订单" to="/pages/trade/list?status=WAIT_BUYER_PAY"></sp-icon-menu>
                        </at-badge>
                        <at-badge value="{{detail.promoter_grade_order_count}}" __triggerObserer="{{ _triggerObserer }}">
                            <sp-icon-menu icon="comment" __triggerObserer="{{ _triggerObserer }}" title="津贴订单" to="/pages/trade/list?status=WAIT_RATE"></sp-icon-menu>
                        </at-badge>
                    </view>
                </view>
            </view>
            <view class="member-sec member-trades">
                <view class="sec-hd"><text class="sec-title">我的会员</text>
                    <view class="more" bindtap="navigateTo" data-e-tap-so="this" data-e-tap-a-a="/pages/trade/list">
                        <at-icon value="chevron-right" __triggerObserer="{{ _triggerObserer }}"></at-icon>
                    </view>
                </view>
                <view class="sec-bd">
                    <view class="member-recommend__menus">
                        <view>已购买会员<text class="member-number">{{detail.isbuy_promoter}}</text>人</view>
                        <view>未购买会员<text class="member-number">{{detail.notbuy_promoter}}</text>人</view>
                    </view>
                </view>
            </view>
        </view>
        <view class="member-sec member-tools">
            <view class="sec-bd">
                <view class="member-recommend__menus">
                    <view class="sp-icon sp-icon-qrcode icon-qrcode"></view>
                    <view>我的二维码</view>
                </view>
            </view>
        </view>
    </view>
</block>