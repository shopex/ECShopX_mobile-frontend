<block>
    <view class="page-member-integral">
        <nav-bar title="余额充值" __triggerObserer="{{ _triggerObserer }}" leftIconType="chevron-left"></nav-bar>
        <view class="member-integral__hd">
            <view class="integral-info">
                <view class="integral-number"><text class="sp-icon sp-icon-zijin icon-point"></text><text class="integral-number__text">{{totalDeposit}}</text>
                </view>
                <view class="integral-text">当前账户余额</view>
            </view>
        </view>
        <view class="member-integral__bd">
            <view class="integral-sec integral-info__status">
                <view class="integral-sec__share">点击“立即充值”即表示阅读并同意<text bindtap="handleClickPayRule" data-e-tap-so="this">《充值协议》</text>
                </view>
            </view>
            <view class="integral-sec member-pay">
                <block wx:if="{{list.length > 0}}">
                    <view class="member-pay__list">
                        <at-tag className="{{item.$loopState__temp2}}" __triggerObserer="{{ _triggerObserer }}" wx:key="index" name="{{item.$original.money}}" active="{{item.$original.money === isActiveName ? true : false}}" bindonclick="handleClickTag" wx:for="{{loopArray0}}" wx:for-item="item" wx:for-index="index" __fn_onClick="{{true}}" data-e-onclick-so="this" data-e-onclick-a-a="{{item.$original.ruleData}}" data-e-onclick-a-b="{{item.$original.ruleType}}">{{item.$original.money}}</at-tag>
                        <view class="pay-empty"></view>
                        <view class="pay-empty"></view>
                        <view class="pay-empty"></view>
                        <block wx:if="{{ruleData > 0}}">
                            <view class="extra-regard">额外奖励：<text class="extra-regard__Text">充值{{isActiveName}}元送{{ruleData}}{{ruleType === 'point' ? '积分' : '元'}}</text>
                            </view>
                        </block>
                    </view>
                </block>
                <view class="btns">
                    <at-button type="primary" __triggerObserer="{{ _triggerObserer }}" bindonclick="handleClickPay" __fn_onClick="{{true}}">立即充值</at-button>
                </view>
            </view>
        </view>
        <sp-toast __triggerObserer="{{ _triggerObserer }}"></sp-toast>
    </view>
</block>