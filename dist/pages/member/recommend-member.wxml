<block>
    <view class="recomm-list">
        <nav-bar title="我的会员" __triggerObserer="{{ _triggerObserer }}" leftIconType="chevron-left" fixed="true"></nav-bar>
        <at-tabs className="recomm-list__tabs" __triggerObserer="{{ _triggerObserer }}" current="{{curTabIdx}}" tabList="{{tabList}}" bindonclick="handleClickTab" __fn_onClick="{{true}}">
            <at-tabs-pane current="{{curTabIdx}}" __triggerObserer="{{ _triggerObserer }}" wx:key="pIdx" index="{{pIdx}}" wx:for="{{tabList}}" wx:for-item="panes" wx:for-index="pIdx"></at-tabs-pane>
        </at-tabs>
        <scroll-view scroll-y="{{true}}" class="recomm-list__scroll" bindscrolltolower="nextPage">
            <view wx:key="idx" wx:for="{{list}}" wx:for-item="item" wx:for-index="idx">
                <view class="order-item">
                    <view class="order-item__title"><text class="order-item__title-name">{{item.username}}<text class="small-text">({{item.promoter_grade_name}})</text></text><text class="small-text">绑定时间</text>
                    </view>
                    <view class="order-item__title"><text class="small-text">{{item.mobile}}</text><text class="small-text">{{item.bind_date}}</text>
                    </view>
                </view>
            </view>
            <block wx:if="{{page.isLoading}}">
                <loading __triggerObserer="{{ _triggerObserer }}">正在加载...</loading>
            </block>
            <block wx:if="{{!page.isLoading && !page.hasNext && !list.length}}">
                <sp-note img="trades_empty.png" __triggerObserer="{{ _triggerObserer }}">赶快去添加吧~</sp-note>
            </block>
        </scroll-view>
    </view>
</block>