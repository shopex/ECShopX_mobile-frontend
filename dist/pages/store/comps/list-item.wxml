<block>
    <block wx:if="{{!info}}">
        <view></view>
    </block>
    <view class="store-item" bindtap="funPrivatePTKrb" wx:else>
        <view class="store-content">
            <view class="store-name">{{info.store_name}}</view>
            <view class="store-address">{{info.store_address}}</view>
        </view>
        <block wx:if="{{info.lat}}">
            <view class="store-location icon-location" bindtap="handleMap" data-e-tap-so="this" data-e-tap-a-a="{{info.lat}}" data-e-tap-a-b="{{info.lng}}"></view>
        </block>
    </view>
</block>