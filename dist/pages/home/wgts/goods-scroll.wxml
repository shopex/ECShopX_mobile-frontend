<block>
    <block wx:if="{{!info}}">
        <view></view>
    </block>
    <view class="{{'wgt ' + (base.padded ? 'wgt__padded' : null)}}" wx:else>
        <block wx:if="{{base.title}}">
            <view class="wgt__header">
                <view class="wgt__title"><text>{{base.title}}</text>
                    <view class="wgt__subtitle">{{base.subtitle}}</view>
                </view>
                <view class="wgt__more" bindtap="navigateTo" data-e-tap-so="this" data-e-tap-a-a="/pages/item/list">
                    <view class="three-dot"></view>
                </view>
            </view>
        </block>
        <view class="wgt-body">
            <scroll-view class="scroll-goods" scroll-x="{{true}}">
                <view wx:key="idx" class="scroll-item" bindtap="navigateTo" wx:for="{{data}}" wx:for-item="item" wx:for-index="idx" data-e-tap-so="this" data-e-tap-a-a="{{'/pages/item/espier-detail?id=' + item.goodsId}}">
                    <block wx:if="{{config.leaderboard}}">
                        <view class="subscript">
                            <view class="subscript-text">NO.{{idx + 1}}</view>
                            <image class="subscript-img" src="/assets/imgs/espier/paihang.png"></image>
                        </view>
                    </block>
                    <view class="thumbnail">
                        <image class="goods-img" src="{{item.imgUrl}}" mode="aspectFill"></image>
                    </view>
                </view>
            </scroll-view>
        </view>
    </view>
</block>