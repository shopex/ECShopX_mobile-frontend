<block>
    <block wx:if="{{!info}}">
        <view></view>
    </block>
    <view class="{{'wgt ' + (base.padded ? 'wgt__padded' : null)}}" wx:else>
        <block wx:if="{{config}}">
            <swiper class="marquees" autoplay="{{true}}" circular="{{true}}" interval="{{3000}}" duration="{{300}}" vertical="{{config.direction}}" style="{{'background-color:' + config.bgcolor}}">
                <swiper-item wx:key="idx" class="marquees-item" wx:for="{{data}}" wx:for-item="item" wx:for-index="idx">
                    <view bindtap="handleClickItem" style="{{'color:' + config.fontcolor}}" data-e-tap-so="this" data-e-tap-a-a="{{item.id}}">{{item.title}}</view>
                </swiper-item>
            </swiper>
        </block>
    </view>
</block>