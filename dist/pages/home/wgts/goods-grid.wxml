<block>
    <block wx:if="{{!info}}">
        <view></view>
    </block>
    <view class="{{'wgt wgt-grid ' + (base.padded ? 'wgt__padded' : null)}}" wx:else>
        <block wx:if="{{base.title}}">
            <view class="wgt__header">
                <view class="wgt__title"><text>{{base.title}}</text>
                    <view class="wgt__subtitle">{{base.subtitle}}</view>
                </view>
                <view class="wgt__goods__more" bindtap="navigateTo" data-e-tap-so="this" data-e-tap-a-a="/pages/item/list">
                    <view class="all-goods">全部商品</view>
                </view>
            </view>
        </block>
        <view class="wgt-body with-padding">
            <view class="grid-goods out-padding grid-goods__type-grid">
                <view wx:key="idx" class="grid-item" bindtap="navigateTo" wx:for="{{data}}" wx:for-item="item" wx:for-index="idx" data-e-tap-so="this" data-e-tap-a-a="{{'/pages/item/espier-detail?id=' + item.goodsId}}">
                    <view class="goods-wrap">
                        <view class="thumbnail">
                            <image class="goods-img" src="{{item.imgUrl}}" mode="aspectFill"></image>
                        </view>
                        <view class="caption">
                            <block wx:if="{{config.brand && item.brand}}">
                                <image class="goods-brand" src="{{item.brand}}" mode="aspectFill"></image>
                            </block>
                            <view class="{{'goods-title ' + (!config.brand || !item.brand ? 'no-brand' : '')}}">{{item.title}}</view>
                            <view class="{{'goods-brief ' + (!config.brand || !item.brand ? 'no-brand' : '')}}">{{item.brief}}</view>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>
</block>