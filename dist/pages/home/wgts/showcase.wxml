<block>
    <block wx:if="{{!info}}">
        <view></view>
    </block>
    <view class="{{'wgt ' + (base.padded ? 'wgt__padded' : null)}}" wx:else>
        <block wx:if="{{base.title}}">
            <view class="wgt__header">
                <view class="wgt__title"><text>{{base.title}}</text>
                    <view class="wgt__subtitle">{{base.subtitle}}</view>
                </view>
                <view class="wgt__more" bindtap="navigateTo" data-e-tap-so="this" data-e-tap-a-a="/pages/item/list">
                    <view class="three-dot"></view>
                </view>
            </view>
        </block>
        <view class="{{'showcase-scheme-' + config.style}}">
            <view class="scheme-item">
                <view class="layout layout-1" bindtap="linkPage" data-e-tap-so="this" data-e-tap-a-a="{{data[0].linkPage}}" data-e-tap-a-b="{{data[0].id}}">
                    <image class="show-img" src="{{data[0].imgUrl}}" mode="scaleToFill"></image>
                </view>
            </view>
            <view class="scheme-item">
                <view class="layout layout-2" bindtap="linkPage" data-e-tap-so="this" data-e-tap-a-a="{{data[1].linkPage}}" data-e-tap-a-b="{{data[1].id}}">
                    <image class="show-img" src="{{data[1].imgUrl}}" mode="scaleToFill"></image>
                </view>
                <view class="layout layout-3" bindtap="linkPage" data-e-tap-so="this" data-e-tap-a-a="{{data[2].linkPage}}" data-e-tap-a-b="{{data[2].id}}">
                    <image class="show-img" src="{{data[2].imgUrl}}" mode="scaleToFill"></image>
                </view>
            </view>
        </view>
    </view>
</block>