<block>
    <block wx:if="{{!info}}">
        <view></view>
    </block>
    <view class="{{'wgt  ' + (base.padded ? 'wgt__padded' : null)}}" wx:else>
        <block wx:if="{{base.title}}">
            <view class="wgt__header">
                <view class="wgt__title">{{base.title}}</view>
                <view class="wgt__subtitle">{{base.subtitle}}</view>
            </view>
        </block>
        <view class="{{'slider-wra img-hotzone ' + (config.padded ? 'padded' : '')}}">
            <image src="{{config.imgUrl}}" mode="widthFix" class="img-hotzone_img"></image>
            <view wx:key="index" class="img-hotzone_zone" style="{{'width: ' + item.widthPer * 100 + '%; height: ' + item.heightPer * 100 + '%; top: ' + item.topPer * 100 + '%; left: ' + item.leftPer * 100 + '%'}}" bindtap="handleClickItem" wx:for="{{data}}" wx:for-item="item" wx:for-index="index" data-e-tap-so="this" data-e-tap-a-a="{{item.linkPage}}" data-e-tap-a-b="{{item.id}}"></view>
        </view>
    </view>
</block>