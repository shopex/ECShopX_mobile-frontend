<block>
    <view class="page-cashier-index">
        <view class="cashier-content">
            <view class="cashier-result">
                <view class="cashier-result__img">
                    <image class="note__img" mode="aspectFill" src="{{'/assets/imgs/pay_' + info.payStatus + '.png'}}"></image>
                </view>
                <view class="cashier-result__info">
                    <view class="cashier-result__info-title">订单支付{{info.payStatus === 'fail' ? '失败' : '成功'}}</view>
                    <view class="cashier-result__info-news">订单号：{{info.order_id}}</view>
                    <view class="cashier-result__info-news">支付单号：{{info.tradeId}}</view>
                    <view class="cashier-result__info-news">创建时间：{{info.create_time}}</view>
                    <block wx:if="{{info.payStatus === 'success'}}">
                        <view class="cashier-result__info-news">支付时间：{{info.payDate}}</view>
                    </block>
                </view>
            </view>
        </view>
        <view class="goods-buy-toolbar">
            <block>
                <block wx:if="{{info.payStatus === 'fail'}}">
                    <view class="goods-buy-toolbar__btns">
                        <button class="goods-buy-toolbar__btn btn-fast-buy" bindtap="handleClickBack" data-e-tap-so="this" data-e-tap-a-a="{{info.order_id}}">返回订单详情</button>
                    </view>
                </block>
                <block wx:else>
                    <view class="goods-buy-toolbar__btns">
                        <button class="goods-buy-toolbar__btn btn-add-cart" bindtap="handleClickRoam">继续购物</button>
                        <button class="goods-buy-toolbar__btn btn-fast-buy" bindtap="handleClickBack" data-e-tap-so="this" data-e-tap-a-a="{{info.order_id}}">订单详情</button>
                    </view>
                </block>
            </block>
        </view>
    </view>
</block>