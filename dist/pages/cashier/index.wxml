<block>
    <view class="page-cashier-index">
        <view class="cashier-money">
            <block wx:if="{{info.order_type}}">
                <view class="cashier-money__tip">订单提交成功，请选择支付方式</view>
            </block>
            <view class="cashier-money__content">
                <view class="cashier-money__content-title">应付总额{{info.pay_type === 'point' ? '（积分）' : '（元）'}}</view>
                <view class="cashier-money__content-number">{{info.pay_type === 'point' ? info.point : info.total_fee}}</view>
            </view>
        </view>
        <view class="pay-status">
            <view class="pay-mode" bindtap="handleClickPayment" data-e-tap-so="this" data-e-tap-a-a="deposit">预存款支付</view>
            <view class="pay-mode" bindtap="handleClickPayment" data-e-tap-so="this" data-e-tap-a-a="point">积分支付</view>
        </view>
        <at-modal isOpened="{{isOpened}}" __triggerObserer="{{ _triggerObserer }}" cancelText="取消" confirmText="确认" bindonclose="handleClosePay" bindoncancel="handleClosePay" bindonconfirm="handleConfirmPay" content="请确认是否支付此订单" __fn_onClose="{{true}}" __fn_onCancel="{{true}}" __fn_onConfirm="{{true}}"></at-modal>
    </view>
</block>