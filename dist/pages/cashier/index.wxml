<block>
    <view class="page-cashier-index">
        <nav-bar title="收银台" __triggerObserer="{{ _triggerObserer }}" handleClickBack="{{handleClickBack}}"></nav-bar>
        <view class="cashier-money">
            <block wx:if="{{info.order_type !== 'recharge'}}">
                <view class="cashier-money__tip">订单提交成功，请选择支付方式</view>
            </block>
            <view class="cashier-money__content">
                <view class="cashier-money__content-title">订单编号： {{info.order_id}}</view>
                <view class="cashier-money__content-title">订单名称：{{info.title}}</view>
                <view class="cashier-money__content-title">应付总额{{info.pay_type === 'point' ? '（积分）' : '（元）'}}</view>
                <view class="cashier-money__content-number">{{info.pay_type === 'point' ? info.point : info.total_fee}}</view>
            </view>
        </view>
        <view class="pay-status">
            <block>
                <block wx:if="{{info.order_type === 'recharge'}}">
                    <view>
                        <alipay-pay orderID="{{info.order_id}}" __triggerObserer="{{ _triggerObserer }}" payType="alipayh5" orderType="{{info.order_type}}"></alipay-pay>
                        <we-h-5-pay orderID="{{info.order_id}}" __triggerObserer="{{ _triggerObserer }}"></we-h-5-pay>
                    </view>
                </block>
                <block wx:else>
                    <view>
                        <point-deposit-pay orderID="{{info.order_id}}" __triggerObserer="{{ _triggerObserer }}" payType="{{info.pay_type}}" orderType="{{info.order_type}}"></point-deposit-pay>
                        <we-pay info="{{info}}" __triggerObserer="{{ _triggerObserer }}"></we-pay>
                    </view>
                </block>
            </block>
        </view>
    </view>
</block>