<block>
    <view class="page-distribution-setting">
        <view class="content-padded">会员资料</view>
        <view class="section">
            <view class="list">
                <view class="list-item">
                    <view class="label">推荐人</view>
                    <view class="list-item-txt text-right">
                        <block>
                            <block wx:if="{{info.parent_info}}"><text>{{info.parent_info.username}}({{info.parent_info.mobile}})</text>
                            </block>
                            <block wx:else><text>--</text>
                            </block>
                        </block>
                    </view>
                </view>
                <view class="list-item">
                    <view class="label">注册时间</view>
                    <view class="list-item-txt text-right">{{info.bind_date}}</view>
                </view>
                <view class="list-item">
                    <view class="label">手机号</view>
                    <view class="list-item-txt text-right">
                        <block>
                            <block wx:if="{{info.mobile}}"><text>{{info.mobile}}</text>
                            </block>
                            <block wx:else><text>--</text>
                            </block>
                        </block>
                    </view>
                </view>
            </view>
        </view>
        <view class="content-padded">店铺资料</view>
        <view class="section">
            <view class="list">
                <view class="list-item">
                    <view class="input-content">
                        <at-input title="小店名称" __triggerObserer="{{ _triggerObserer }}" disabled="{{anonymousState__temp}}" placeholder="请为你的小店设置名字" bindonchange="handleChange" value="{{shop_name}}" __fn_onChange="{{true}}" data-e-onchange-so="this"></at-input>
                    </view>
                    <view class="input-edit" bindtap="handleClick" data-e-tap-so="this">{{isEdit ? '保存' : '修改'}}</view>
                </view>
            </view>
        </view>
    </view>
</block>