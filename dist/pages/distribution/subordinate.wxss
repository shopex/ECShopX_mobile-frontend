.page-distribution-subordinate .subordinate-list__scroll {
  position: absolute;
  left: 0;
  width: 100%;
  top: 75rpx;
  bottom: 0;
  overflow-y: auto;
  overflow-x: hidden;
  -webkit-transform: translate3d(0, 0, 0);
          transform: translate3d(0, 0, 0);
  z-index: 1;
}
.page-distribution-subordinate .subordinate-list__scroll > div, .page-distribution-subordinate .subordinate-list__scroll > view {
  -webkit-transform: translate3d(0, 0, 0);
          transform: translate3d(0, 0, 0);
}
.page-distribution-subordinate .avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background: #eee;
  margin-right: 20rpx;
  border: 4rpx solid #ccc;
}
.page-distribution-subordinate .name {
  font-size: 32rpx;
}
.page-distribution-subordinate .level-name {
  font-size: 28rpx;
  color: #999;
}
.page-distribution-subordinate .mobile {
  font-size: 28rpx;
  color: #999;
}
.page-distribution-subordinate .bind-date {
  color: #999;
  text-align: right;
}
.page-distribution-subordinate .child .avatar {
  border-color: #2372c7;
}
.page-distribution-subordinate .Gchild .avatar {
  border-color: #6dc8e1;
}
.page-distribution-subordinate .GGchild .avatar {
  border-color: #d8eef5;
