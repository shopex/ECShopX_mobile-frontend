.page-distribution-index .header {
  position: relative;
  padding: 30rpx;
  background: #2f3030;
  height: 180rpx;
  color: #ffffff;
}
.page-distribution-index .header .header-avatar {
  width: 114rpx;
  height: 114rpx;
  border-radius: 50%;
}
.page-distribution-index .header .header-info {
  padding-left: 26rpx;
}
.page-distribution-index .header .header-info .mcode {
  font-size: 24rpx;
  margin-bottom: 6rpx;
  color: #eaeaea;
}
.page-distribution-index .header .header-info .nickname {
  font-size: 14PX;
}
.page-distribution-index .header .member-acount {
  padding: 5rpx 10rpx;
  margin-right: 10rpx;
  border: 1rpx solid #ccc;
  border-radius: 60rpx;
  font-size: 22rpx;
  line-height: 1;
  color: #ccc;
}
.page-distribution-index .header .icon-forward {
  color: #ccc;
}
.page-distribution-index .achievement .section-body {
  font-size: 24rpx;
}
.page-distribution-index .achievement .amount {
  margin-bottom: 5rpx;
}
.page-distribution-index .achievement .amount .count {
  font-size: 50rpx;
  margin-right: 10rpx;
}
.page-distribution-index .member {
  font-size: 30rpx;
  color: #333;
}
.page-distribution-index .analysis [class^=icon-] {
  color: #00c3ff;
  font-size: 50rpx;
}
.page-distribution-index .analysis .label {
  padding: 15rpx 0;
  font-size: 24rpx;
}
.page-distribution-index .share .share-btn {
  margin: 0;
  padding: 0;
  line-height: 1;
  background: none;
  font-size: inherit;
  color: inherit;
}
.page-distribution-index .share .share-btn::after {
  content: none;
}
.page-distribution-index .share [class^=icon-] {
  color: #00c3ff;
  font-size: 50rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}