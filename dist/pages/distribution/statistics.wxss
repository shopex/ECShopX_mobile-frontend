.page-distribution-statistics .header {
  color: #fff;
  background-image: -webkit-gradient(linear, right bottom, left top, from(#cca76a), to(#e8cb97));
  background-image: -webkit-linear-gradient(bottom right, #cca76a, #e8cb97);
  background-image: -o-linear-gradient(bottom right, #cca76a, #e8cb97);
  background-image: linear-gradient(to top left, #cca76a, #e8cb97);
}
.page-distribution-statistics .header .header-top {
  font-size: 24rpx;
  padding-bottom: 30rpx;
}
.page-distribution-statistics .header .header-top .cash-btn {
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 50rpx;
  margin: 20rpx 0;
  font-size: 28rpx;
  color: #cdb17c;
  text-align: center;
  border-radius: 70rpx;
  background: #fff;
}
.page-distribution-statistics .header .header-top .record-btn {
  padding: 0 10rpx;
  border-radius: 60rpx;
}
.page-distribution-statistics .header .header-bottom {
  padding-top: 30rpx;
  border-top: 1rpx solid #e9d0a5;
}
.page-distribution-statistics .header .header-bottom .with-border {
  border-right: 1rpx solid #e9d0a5;
}
.page-distribution-statistics .header .header-bottom .assets-label {
  padding: 0 20rpx;
  margin-bottom: 15rpx;
  background: #e5cc99;
  font-size: 24rpx;
  line-height: 40rpx;
  border-radius: 30rpx;
}
.page-distribution-statistics .tips {
  position: relative;
  padding-left: 30rpx;
  color: #666;
  font-size: 24rpx;
  line-height: 1.5;
}
.page-distribution-statistics .tips::after {
  position: absolute;
  left: 10rpx;
  top: 13rpx;
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background: #ccc;
  content: "";
}
.page-distribution-statistics .analysis {
  color: #999;
  -webkit-box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.2);
          box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.2);
  margin-bottom: 30rpx;
}
.page-distribution-statistics .analysis .data-amount {
  font-size: 42rpx;
  color: #ff0000;
  margin-bottom: 30rpx;
}
.page-distribution-statistics .analysis .data-count {
  font-size: 30rpx;
  color: #333;
}
.page-distribution-statistics .analysis .data-label {
  font-size: 24rpx;
  margin-bottom: 20rpx;
}
.page-distribution-statistics .analysis .analysis-footer {
  position: relative;
  padding: 20rpx 0;
  background: #f7f6f8;
  font-size: 24rpx;
  border-radius: 0 0 10rpx 10rpx;
}
.page-distribution-statistics .analysis .analysis-footer::after {
  position: absolute;
  top: -20rpx;
  right: 40%;
  border-style: solid;
  border-color: transparent;
  border-width: 20rpx;
  border-top-width: 0;
  border-bottom-color: #f7f6f8;
  content: "";
}
.page-distribution-statistics .analysis .analysis-footer .footer-item {
  padding: 6rpx 0;
}