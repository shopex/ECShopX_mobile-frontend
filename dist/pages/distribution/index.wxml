<block>
    <view class="page-distribution-index">
        <view class="header view-flex view-flex-middle">
            <image class="header-avatar" src="{{info.avatar}}" mode="aspectFill"></image>
            <view class="header-info view-flex-item">
                <view class="mcode">昵称：{{info.username}}
                    <block wx:if="{{info.is_open_promoter_grade}}"><text>（{{info.promoter_grade_name}}）</text>
                    </block>
                </view>
                <block wx:if="{{info.shop_name}}">
                    <view class="nickname">{{info.shop_name}}</view>
                </block>
            </view>
            <navigator class="view-flex view-flex-middle" url="/pages/distribution/setting">
                <view class="member-acount">账户管理</view>
                <view class="icon-arrowRight"></view>
            </navigator>
        </view>
        <view class="section achievement">
            <view class="section-body view-flex">
                <view class="view-flex-item content-center">
                    <view class="amount"><text class="count">{{info.itemTotalPrice / 100}}</text>元</view>
                    <view>营业额</view>
                </view>
                <view class="view-flex-item content-center">
                    <view class="amount"><text class="count">{{info.cashWithdrawalRebate / 100}}</text>元</view>
                    <view>可提现</view>
                </view>
            </view>
        </view>
        <view class="section analysis">
            <view class="section-body view-flex content-center">
                <navigator class="view-flex-item" hover-class="none" url="/pages/distribution/trade?type=order">
                    <view class="icon-list3"></view>
                    <view class="label">提成订单</view>
                    <view>{{info.promoter_order_count}}</view>
                </navigator>
                <navigator class="view-flex-item" hover-class="none" url="/pages/distribution/trade?type=order_team">
                    <view class="icon-list2"></view>
                    <view class="label">津贴订单</view>
                    <view>{{info.promoter_grade_order_count}}</view>
                </navigator>
                <navigator class="view-flex-item" hover-class="none" url="/pages/distribution/statistics">
                    <view class="icon-money"></view>
                    <view class="label">推广费</view>
                    <view class="mark">{{info.rebateTotal / 100}}</view>
                </navigator>
            </view>
        </view>
        <view class="section">
            <navigator class="section-title with-border view-flex view-flex-middle" url="{{'/pages/distribution/subordinate?hasBuy=' + info.isbuy_promoter + '&noBuy=' + info.notbuy_promoter}}">
                <view class="view-flex-item">我的会员</view>
                <view class="section-more icon-arrowRight"></view>
            </navigator>
            <view class="content-padded-b view-flex content-center member">
                <view class="view-flex-item">已购买会员 <text class="mark">{{info.isbuy_promoter}}</text>人</view>
                <view class="view-flex-item">未购买会员 <text class="mark">{{info.notbuy_promoter}}</text>人</view>
            </view>
        </view>
        <view class="section share">
            <view class="section-body view-flex content-center">
                <navigator class="view-flex-item" open-type="navigateTo" url="invite_friends"><text class="icon-qrcode1"></text>我的二维码</navigator>
                <button class="share-btn view-flex-item" open-type="share"><text class="icon-share1"></text>分享给好友</button>
            </view>
        </view>
    </view>
</block>