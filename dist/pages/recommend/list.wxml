<block>
    <view class="page-goods-list page-recommend-list">
        <view class="recommend-list__toolbar">
            <view class="search-bar">
                <list-search bindonconfirm="handleConfirm" __triggerObserer="{{ _triggerObserer }}" __fn_onConfirm="{{true}}" data-e-onconfirm-so="this"></list-search>
            </view>
            <filter-bar className="goods-list__tabs" __triggerObserer="{{ _triggerObserer }}">
                <view class="filter-bar__item" bindtap="handleClickFilter" data-e-tap-so="this">
                    <view class="icon-menu"></view><text>{{selectColumn.name || '栏目'}}</text>
                </view>
                <view class="filter-bar__item">
                    <picker mode="multiSelector" bindtap="handleClickPicker" bindchange="bindMultiPickerChange" bindcolumnchange="bindMultiPickerColumnChange" value="{{multiIndex}}" range="{{areaList}}">
                        <view class="icon-periscope"></view><text>{{address || '地区'}}</text>
                    </picker>
                </view>
            </filter-bar>
        </view>
        <at-drawer show="{{showDrawer}}" __triggerObserer="{{ _triggerObserer }}" right="{{true}}" mask="{{true}}" width="{{anonymousState__temp}}">
            <view class="drawer-item">
                <view class="drawer-item__options">
                    <view class="{{item.$loopState__temp3}}" wx:key="index" bindtap="handleClickParmas" wx:for="{{loopArray0}}" wx:for-item="item" wx:for-index="index" data-e-tap-so="this" data-e-tap-a-a="{{item.$original.id}}">{{item.$original.name}}</view>
                    <view class="drawer-item__options__none"></view>
                    <view class="drawer-item__options__none"></view>
                    <view class="drawer-item__options__none"></view>
                </view>
            </view>
            <view class="drawer-footer"><text class="drawer-footer__btn" bindtap="handleClickSearchParams" data-e-tap-so="this" data-e-tap-a-a="reset">重置</text><text class="drawer-footer__btn drawer-footer__btn_active" bindtap="handleClickSearchParams" data-e-tap-so="this" data-e-tap-a-a="submit">确定</text>
            </view>
        </at-drawer>
        <scroll-view class="goods-list__scroll" scroll-y="{{true}}" scroll-top="{{scrollTop}}" scroll-with-animation="{{true}}" bindscroll="handleScroll" bindscrolltolower="nextPage">
            <view class="goods-list goods-list__type-grid">
                <recommend-item wx:key="$original.item_id" __triggerObserer="{{ _triggerObserer }}" info="{{item.$original}}" bindonclick="anonymousFunc0" wx:for="{{loopArray1}}" wx:for-item="item" wx:for-index="__index0" __fn_onClick="{{true}}" data-e-onclick-so="this" data-e-onclick-a-a="{{__index0}}"></recommend-item>
            </view>
            <block wx:if="{{page.isLoading}}">
                <loading __triggerObserer="{{ _triggerObserer }}">正在加载...</loading>
            </block>
            <block wx:if="{{!page.isLoading && !page.hasNext && !list.length}}">
                <sp-note img="trades_empty.png" __triggerObserer="{{ _triggerObserer }}">暂无数据~</sp-note>
            </block>
        </scroll-view>
        <back-to-top show="{{showBackToTop}}" __triggerObserer="{{ _triggerObserer }}" bindonclick="scrollBackToTop" __fn_onClick="{{true}}"></back-to-top>
        <tab-bar current="{{2}}" __triggerObserer="{{ _triggerObserer }}"></tab-bar>
    </view>
</block>