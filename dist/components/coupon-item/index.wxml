<block>
    <block wx:if="{{!info}}">
        <view></view>
    </block>
    <view class="coupon-item-index" bindtap="funPrivateZpOCG" wx:else>
        <block wx:if="{{isShowCheckout && isDisabled}}">
            <view class="coupon-item__check" bindtap="handleClickChecked" data-e-tap-so="this" data-e-tap-a-a="{{info.id}}">
                <block>
                    <block wx:if="{{isChoosed === info.id && isItemChecked}}"><text class="in-icon in-icon-check coupon-item__checked"></text>
                    </block>
                    <block wx:else><text class="coupon-item__unchecked"></text>
                    </block>
                </block>
            </view>
        </block>
        <view class="coupon-item">
            <block wx:if="{{info.card_type === 'cash'}}">
                <view class="{{anonymousState__temp}}">
                    <view class="coupon-item___number">￥<text class="coupon-item___number_text">{{info.reduce_cost / 100}}</text>
                    </view>
                    <view class="coupon-item___info">满{{info.least_cost > 0 ? info.least_cost / 100 : 0.01}}可用</view>
                    <view class="radius-view radius-left-top"></view>
                    <view class="radius-view radius-left-bottom"></view>
                </view>
            </block>
            <block wx:if="{{info.card_type === 'gift'}}">
                <view class="{{anonymousState__temp2}}">
                    <view class="coupon-item___number">兑换券</view>
                    <view class="radius-view radius-left-top"></view>
                    <view class="radius-view radius-left-bottom"></view>
                </view>
            </block>
            <block wx:if="{{info.card_type === 'discount'}}">
                <view class="{{anonymousState__temp3}}">
                    <view class="coupon-item___number"><text class="coupon-item___number_text">{{(100 - info.discount) / 10}}</text>折</view>
                    <view class="coupon-item___info">满{{info.least_cost > 0 ? info.least_cost / 100 : 0.01}}可用</view>
                    <view class="radius-view radius-left-top"></view>
                    <view class="radius-view radius-left-bottom"></view>
                </view>
            </block>
            <block wx:if="{{info.card_type === 'member'}}">
                <view class="{{anonymousState__temp4}}">
                    <view class="coupon-item___number"><text class="coupon-item___number_text">会员折扣</text>
                    </view>
                    <view class="radius-view radius-left-top"></view>
                    <view class="radius-view radius-left-bottom"></view>
                </view>
            </block>
            <view class="coupon-item__content">
                <view class="coupon-item___description"><text>{{info.title}}</text>
                    <block wx:if="{{info.tagClass === 'used'}}">
                        <view class="coupon-item___used"><text class="sp-icon sp-icon-yishiyong icon-used"></text>
                        </view>
                    </block>
                    <slot></slot>
                </view>
                <block wx:if="{{info.begin_date && info.end_date}}">
                    <view class="coupon-item___time"><text>{{info.begin_date}}~ {{info.end_date}}</text>
                    </view>
                </block>
                <view class="radius-view radius-right-top"></view>
                <view class="radius-view radius-right-bottom"></view>
            </view>
        </view>
    </view>
</block>