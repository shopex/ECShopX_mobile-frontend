<block>
    <block wx:if="{{!info}}">
        <view></view>
    </block>
    <view class="{{anonymousState__temp}}" wx:else>
        <view class="goods-item__hd">
            <slot></slot>
        </view>
        <view class="goods-item__bd">
            <view class="goods-item__img-wrap">
                <image class="goods-item__img" bindtap="funPrivatewrbBZ" mode="aspectFill" src="{{img}}"></image>
            </view>
            <view class="goods-item__cont"><text class="goods-item__title">{{info.title}}</text><text class="goods-item__desc">{{info.desc}}</text>
                <view class="goods-item__prices">
                    <price primary="{{true}}" __triggerObserer="{{ _triggerObserer }}" classes="goods-item__price" className="goods-item__price" symbol="{{info.curSymbol}}" noSymbol="{{noCurSymbol}}" value="{{price}}"></price>
                    <block wx:if="{{showMarketPrice}}">
                        <price symbol="{{info.curSymbol}}" __triggerObserer="{{ _triggerObserer }}" noSymbol="{{noCurSymbol}}" classes="goods-item__price-market" className="goods-item__price-market" value="{{info.market_price}}"></price>
                    </block>
                </view>
            </view>
        </view>
        <view class="goods-item__ft">
            <slot name="footer"></slot>
        </view>
    </view>
</block>