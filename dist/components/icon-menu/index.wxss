.sp-iconmenu {
  background: transparent;
  text-align: center;
  padding: 0;
  border: none !important;
}
.sp-iconmenu:before, .sp-iconmenu:after {
  border: none !important;
}
.sp-iconmenu__icon {
  margin: 0 0 28rpx;
  line-height: 1;
}
.sp-iconmenu__img {
  width: 100rpx;
  height: 100rpx;
}
.sp-iconmenu__title {
  line-height: 1;
  display: block;
  text-align: center;
  font-size: 23rpx;
}