<block>
    <block wx:if="{{!info}}">
        <view></view>
    </block>
    <view class="{{'wgt ' + (base.padded ? 'wgt__padded' : null)}}" wx:else>
        <view class="wgt-body with-padding">
            <view class="navigation">
                <view class="nav-item" wx:key="idx" bindtap="handleClickItem" wx:for="{{data}}" wx:for-item="item" wx:for-index="idx">
                    <image class="nav-img" mode="widthFix" src="{{item.imgUrl}}"></image><text class="nav-name">{{item.content}}</text>
                </view>
            </view>
        </view>
    </view>
</block>